{
    "name": "ETE FMC notifier",
    "version": "1.0",
    "manifest_version": 2,

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "description": "description",
    "icons": {
        "128": "./icon.png"
    },

    "browser_action": {
        "default_title": "ETE FMC notifier",
        "default_popup": "popup.html"
    },

    "permissions": [
        "webRequest",
        "storage",
        "*<all_urls>",
        "tabs"
    ]
}